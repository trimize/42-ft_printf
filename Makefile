$(NAME): libft.a $(OBJECTS) $(INCDIR)
	ar rcs $(NAME) $(OBJECTS)
	mv $(OBJECTS) $(OBJDIR)

libft.a :
	@echo "\n\n\033[33m*********************** \033[35mCompiling libft \033[33m***********************\033[90m\n\n"
	$(shell mkdir -p obj)
	$(MAKE) -C $(LIBPATH) bonus
	cp $(LIBPATH)libft.a $(NAME)

clean:
	rm -f $(OBJDIR)/*

fclean: clean
	rm -f $(NAME)
	$(shell rmdir -p obj)
	@$(MAKE) -C $(LIBPATH) fclean

bonus: all

re: fclean all

.PHONY: all clean fclean re bonus
