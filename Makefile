NAME = libftprintf.a
LIBPATH = ./libft/
INCDIR = ./includes/
SRCSDIR = ./srcs/
OBJDIR = ./obj/
SOURCES = $(wildcard $(shell find ./srcs/ -name "*.c"))
OBJECTS = $(SOURCES:.c=.o)
CC = cc
CFLAGS = -Wall -Wextra -Werror

all: $(NAME)
	@echo "\n\n██████╗░██████╗░██╗███╗░░██╗████████╗███████╗  ░█████╗░░█████╗░███╗░░░███╗██████╗░██╗██╗░░░░░███████╗██████╗░"
